{
    "compilerOptions": {
        "baseUrl": "./src",
        "removeComments": false,
        "preserveConstEnums": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "suppressImplicitAnyIndexErrors": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "moduleResolution": "node",
        "pretty": true,
        "target": "ES2016",
        "module": "commonjs",
        "outDir": "dist"
    },
    "files": [
        "src/index.ts"
    ],
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4
    }
}